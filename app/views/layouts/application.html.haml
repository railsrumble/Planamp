!!!
%html
  %head
    %title= content_for?(:title) ? content_for(:title) : "Planamp - Motivations for Your Goals"
    = stylesheet_link_tag    '/css/styles', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{:href => "http://fonts.googleapis.com/css?family=Roboto:300,400,700&subset=latin,cyrillic-ext", :rel => "stylesheet", :type => "text/css"}/
    :javascript
      var switchTo5x=true;
    %script{:src => "http://w.sharethis.com/button/buttons.js", :type => "text/javascript"}
    :javascript
      stLight.options({publisher: "d9e3b58a-eb41-43f1-b570-aef8ebe91ac5", doNotHash: false, doNotCopy: false, hashAddressBar: true});

  %body{class: "#{content_for?(:body_class) ? content_for(:body_class) : ''}"}
    %div.b-header
      %div.b-wrapper.clearfix
        %div.b-header__name= link_to "Planamp", root_path, class: 'b-header__name-link';
        %div.b-header__menu= render partial: 'shared/menu'
    %div.b-content
      %div.b-wrapper.clearfix
        = render partial: 'shared/messages'
        = yield

        = render partial: 'shared/yandex_metrika'
        = render partial: 'shared/swell'

